 
<article class="post">
    <div class="card">
        <div class="card-header bg-dark text-light">
            <div class="post-name">
                <a href="/post/{{id}}" class="text-white">{{title}}</a>
                
                <span class="post-info">
                    Posted by {{user.username}} on {{format_date created_at}}
                </span>
            </div>
                
                   
        </div>
        <div class="card-body">
            <p>
                {{post_text}}
            </p>
        </div>
    </div>
</article>