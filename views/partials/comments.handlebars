<div class="comments">
    {{#each this}}

    <section class="comment">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <div class="post-name">
                    Posted by {{user.username}} on {{format_date created_at}}
                </div>         
            </div>
            <div class="card-body">
                <p>
                    {{comment_text}}
                </p>
            </div>
        </div>
    </section>

    {{/each}}
</div>