<div class="comments">
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{!-- Added handlebars helper format_date to format the date correctly --}}
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>